			<widget class="spacer" height="6" />

			<widget class="text" auto_size="all" style="bold" colour="text" alignment="centre">
				<record id="object_property" get_property="LStp" set_property="text" />
			</widget>

			<widget class="text" auto_size="vertical" colour="faded text" alignment="centre" multiline="true"  width="300">
				<record id="object_property" get_property="LSds" set_property="text" />
			</widget>

		</container>

		<container height="505" width="300">
