<panel>
	<layout class="arrange_vertical_attachment" alignment="top,extend" offset="0"/>
	<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>

	<string id="skin_style" value="subtle box"/>

	<!-- content area -->
	<container class="scrolling_box">
		<container>
			<layout class="fit_children_attachment" alignment="vertical"/>
			<layout class="arrange_horizontal_attachment" layout="-1, 320" gap="12"/>
			<layout class="stick_to_sides_attachment" alignment="top" apply_to_children="true"/>

			<container>
				<attachment_group class="vertical_arrange_autosize" vertical_offset="0" vertical_gap="8" horizontal_alignment="horizontal" horizontal_inset="0" />

				<container>
					<attachment_group class="vertical_arrange_autosize" horizontal_alignment="horizontal" horizontal_inset="0" />


					<widget class="text" id="comp" style="bold" auto_size="vertical" size="large" alignment="centre"/>
					<widget class="text" id="fxdt" auto_size="vertical" size="large" alignment="centre"/>

					<!-- logos -->
					<container height="200">
						<layout class="arrange_horizontal_attachment" alignment="middle,fill"/>
						<layout class="stick_to_sides_attachment" alignment="top" inset="0" apply_to_children="true"/>

						<container height="180">
							<layout class="arrange_vertical_attachment" layout="-1, 25"/>
							<layout class="stick_to_sides_attachment" alignment="horizontal,top" inset="0" apply_to_children="true"/>

							<widget class="object_portrait_picture" id="hmpc" scale_picture="true" image_alignment="centre" width="50"/>
							<widget class="client_object_label" id="hmnm" auto_size="none" spec="text" size="large" colour="text" alignment="centre"/>
						</container>

						<widget class="text" auto_size="all" alignment="centre" colour="text" style="semi_bold" size="24">
							<layout class="centre_in_parent_attachment" alignment="vertical" offset="0"/>
							<translation id="text" translation_id="242324" type="use" value="v[versus]"/>
						</widget>

						<container height="180">
							<layout class="arrange_vertical_attachment" layout="-1, 25"/>
							<layout class="stick_to_sides_attachment" alignment="horizontal,top" inset="0" apply_to_children="true"/>

							<widget class="object_portrait_picture" id="awpc" scale_picture="true" image_alignment="centre"/>
							<widget class="client_object_label" id="awnm" auto_size="none" spec="text" size="large" colour="text" alignment="centre"/>
						</container>
					</container>

				</container>

				<!-- main body text -->
				<widget class="inbox_body_text" id="bdtx"/>
			</container>

			<container>
				<attachment_group class="vertical_arrange_autosize" horizontal_alignment="horizontal" horizontal_inset="0" />

				<!--dynamic image here please-->
				<container id="ICdi" height="200">
					<layout class="stick_to_sides_attachment" alignment="all" inset="-20" apply_to_children="true"/>
					<widget class="picture" file="photos/dynamic/draw/bg" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true" wants_mouse_events="false"/>
					<widget class="value_based_picture" id="CoPi" image_alignment="centre" keep_aspect_ratio="true" scale_picture="true">
						<record id="object_property">
							<integer id="get_property" value="id  "/>
							<integer id="set_property" value="valu"/>
						</record>

						<list id="value_list">
							<record value="1301394" file="photos/dynamic/uefa/cup draw/ucl cup draw"/>
							<record value="1301396" file="photos/dynamic/uefa/cup draw/uel cup draw"/>
							<record value="31051584" file="photos/dynamic/uefa/cup draw/uecl cup draw"/>
							<record value="1301397" file="photos/dynamic/draw/bg"/>
						</list>
					</widget>
				</container>

				<!-- opposition details -->
				<widget class="inbox_mini_profile_team_info_panel" id="tmin"/>

				<!-- stadium details -->
				<widget class="client_object_viewer_xml_panel" file="news_item_panels/extra_panels/cup draw stadium info" id="stdi"/>
			</container>
		</container>
	</container>

</panel>
