				</widget>


				<widget class="object_portrait_picture" height="120" width="120" scale_picture="true" image_alignment="centre">
					<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" />
					<record id="object_property">
						<integer id="get_property" value="away" />
						<integer id="set_property" value="objt" />
					</record>
				</widget>

				<!--away-->
				<container height="140">
					<attachment_group class="vertical_arrange_autosize_all" vertical_gap="4" />
					<layout class="vertical_arrange" vertical_layout="-1,-1,-1"/>
					<container/>
					<container>
						<attachment_group class="vertical_arrange_autosize_all" vertical_gap="4" />
						<widget class="team_button" alignment="left, centre_y" style="bold" size="xlarge" multiline="false" auto_size="all" icon_enabled="false" mode="1">
							<record id="object_property" get_property="away" set_property="valu" />
