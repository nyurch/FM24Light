							<record id="object_property" get_property="home" set_property="valu" />
						</widget>
						<container class="client_object_viewer_xml_panel">
							<record id="object_property" get_property="home" set_property="objt" />
							<attachment_group class="vertical_arrange_autosize_all" vertical_gap="0" />
							<widget class="division_position_button" alignment="centre_x,centre_y" display_format="1" size="small" colour="faded text" auto_size="all">
								<record id="object_property">
									<integer id="get_property" value="Tpos" />
								</record>
							</widget>
						</container>
					</container>
					<container/>
				</container>

				<widget class="object_portrait_picture" height="120" width="120" scale_picture="true" image_alignment="centre">
					<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" />
					<record id="object_property">
						<integer id="get_property" value="home" />
						<integer id="set_property" value="objt" />
					</record>
				</widget>


				<widget class="text" ignore_sizing="true" alignment="centre" size="xlarge" style="bold" height="120" width="120">
					<translation id="text" translation_id="516206" type="use" value="vs[COMMENT: AREA: Prematch Header Panels; SUB-AREA: subtitle text; BN: 35843; TONE: Formal; CHARLIMIT: None; REF-ID: n/a; NOTE: short for versus, eg Team1 vs Team2]" />
