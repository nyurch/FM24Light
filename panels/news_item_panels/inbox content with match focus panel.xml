			</widget>
			<!--comp name-->
			<widget class="fixture_name_text" id="FxNm" font="title" colour="accent" size="large" height="40" multiline="true" alignment="centre">
				<record id="object_property">
					<integer id="get_property" value="FxNm" />
				</record>
			</widget>
			<!--spacer-->
			<widget class="horizontal_subtle_divider" />
			<container>
				<attachment_group class="horizontal_arrange_vertical_autosize" horizontal_alignment="middle" horizontal_gap="8" />

				<!--home details-->
				<container height="140">
					<attachment_group class="vertical_arrange_autosize_all" vertical_gap="4" />
					<layout class="vertical_arrange" vertical_layout="-1,-1,-1"/>
					<container/>
					<container>
						<attachment_group class="vertical_arrange_autosize_all" vertical_gap="4" />
