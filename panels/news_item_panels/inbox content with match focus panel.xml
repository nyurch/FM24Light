						<container class="client_object_viewer_xml_panel">
							<record id="object_property" get_property="away" set_property="objt" />
							<attachment_group class="vertical_arrange_autosize_all" vertical_gap="0" />
							<widget class="division_position_button" alignment="centre_x,centre_y" display_format="1" size="small" colour="faded text" auto_size="all">
								<record id="object_property">
									<integer id="get_property" value="Tpos" />
								</record>
							</widget>
						</container>
					</container>
					<container/>
				</container>
			</container>
		</container>


		<container>
			<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
			<widget class="match_focus_session_widget" id="mchF"/>


			<widget class="text" alignment="centre" id="fnTx" hidden="true" height="200">

				<translation id="text" translation_id="254539" type="use" value="Finished[COMMENT: scout assignments panel; scout has finished assignments]" />
