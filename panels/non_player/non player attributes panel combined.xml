<panel>
	<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
	<flags id="highlighted_row_appearance" value="tables/custom/attributes/required/row" />

	<container>
		<attachment_group class="horizontal_arrange" horizontal_alignment="fill" />

		<!-- Coaching panel -->
		<container id="npcn">
			<attachment_group class="vertical_arrange" vertical_alignment="top,extend" vertical_gap="8"/>

			<!--Coaching Table-->
			<widget class="table" id="cmbt" mode="fill_rows, printable, stripe_rows" layout="-1, 22" auto_size="vertical" row_spacing="1">

				<list id="column_widget_properties">
					<record id="CNam" index="0" alignment="left,centre_y" spec="text" />
					<record id="CVal" index="1" alignment="right,centre_y" style="semi_bold"/>
				</list>

				<!-- small inset from sides of table -->
				<list id="column_table_properties">
					<record id="CNam" index="0" left="0" sort_disabled="true" />
					<record id="CVal" index="1" right="0" sort_disabled="true">
						<record id="widget_info" class="attribute_label" alignment="centre,can_scale" colour="white" size="11" font="text_white" use_attribute_colour_as_bg="true" appearance="boxes/custom/attributes/paper"/>
					</record>
				</list>
			</widget>

		</container>
	</container>

</panel>