<panel height="20">
  <layout class="arrange_horizontal_attachment" alignment="left,extend" offset="0" gap="0"/>
  <layout class="fit_children_attachment" alignment="horizontal,fill" offset="0" gap="0"/>
  <layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true" />

  <container class="main_box_no_margin" width="40">
    <layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

    <widget class="label" id="bsnm" colour="black" size="normal" alignment="centre" />
    
  </container>

  <container class="main_box_no_margin">
    <layout class="arrange_horizontal_attachment" alignment="left" offset="0" gap="0"/>
    <layout class="fit_children_attachment" alignment="horizontal" offset="0" gap="0"/>
    <layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true" />
      
    <widget  class="text" id="name" format="[%person#1-surname]" font="title" colour="black" size="normal" alignment="left,centre_y,can_scale" multiline="false" auto_size="horizontal"/>
  </container>

</panel>
