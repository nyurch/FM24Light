		<!-- Unit involvement widget -->
		<widget class="unit_involvement_widget" id="uinW"/>

		<widget class="spacer" />

		<widget class="text" id="trat" alignment="left,centre_y" style="bold" font="title" colour="black" size="9" auto_size="vertical"/>

		<widget class="horizontal_divider"/>

		<!-- top 5 attributes -->
		<container>
			<attachment_group class="vertical_arrange" vertical_alignment="top" vertical_offset="0" vertical_gap="5"/>

			<widget class="table" id="tAtT" layout="-1" mode="fill_rows, stripe_rows, printable" row_height="30" row_spacing="1" auto_size="vertical" />
		</container>

		<!-- Injured/At Risk widgets -->
		<container>
			<attachment_group class="horizontal_arrange" horizontal_layout="-1,-1"/>

			<widget class="injured_or_at_risk_players_total_widget" id="inju" auto_size="all"/>
			<widget class="injured_or_at_risk_players_total_widget" id="sInj" auto_size="all"/>
		</container>

	</container>

</panel> 
