<panel>

	<boolean id="save_session_state" value="true" />
	<boolean id="save_default_state" value="true" />


	<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />

	<!-- main area -->
	<container>
		<attachment_group class="horizontal_arrange" horizontal_alignment="fill" vertical_alignment="vertical" horizontal_gap="0" />

		<container id="main" hidden="false">
			<attachment_group class="horizontal_arrange" horizontal_layout="-1,1,-1,1,-1" vertical_alignment="vertical" horizontal_gap="5" vertical_inset="30" />

			<container>

				<attachment_group class="vertical_arrange" vertical_alignment="middle" vertical_gap="10" />
				<widget class="picture" file="icons/custom/training/Players" red_replacement="bg darker" green_replacement="fg" scale_picture="true" height="26" image_alignment="centre" />
				<widget id="pnum" class="text" font="title" colour="black" size="14" height="14" alignment="centre" />

				<widget class="text" auto_size="vertical" font="label" colour="black" size="normal" alignment="centre">
					<translation id="text" translation_id="598102" type="use" value="Total players[COMMENT: AREA: training overview panel SUB-AREA: player training information widget; FR-BN: FM-21946; TONE: Formal; CHARLIMIT: None; REF-ID: n/a; NOTE: Informarion regarding the total number of players in training units in hte team]" />
				</widget>
			</container>

			<widget class="vertical_divider" />

			<container>
				<attachment_group class="vertical_arrange" vertical_alignment="middle" vertical_gap="10" />
				<widget class="picture" file="icons/26px/injured" scale_picture="true" height="26" image_alignment="centre" />

				<widget id="inum" class="text" font="title" colour="black" size="14" height="14" alignment="centre" />

				<widget class="text" auto_size="vertical" font="label" colour="black" size="normal" alignment="centre">
					<translation id="text" translation_id="351414" type="use" value="Injured[COMMENT: Training overview panel; title for number of players that are Injured]" />
				</widget>
			</container>

			<widget class="vertical_divider" />

			<container>
				<attachment_group class="vertical_arrange" vertical_alignment="middle" vertical_gap="10" />
				<widget class="picture" file="icons/26px/slightly injured" scale_picture="true" height="26" image_alignment="centre" />

				<widget id="rnum" class="text" font="title" colour="black" size="14" height="14" alignment="centre" />

				<widget class="text" auto_size="vertical" font="label" colour="black" size="normal" alignment="centre">
					<translation id="text" translation_id="598101" type="use" value="At Risk[COMMENT: AREA: Training overview panel; SUB-AREA: player training information widget; FR-BN: FM-21946; TONE: Formal; CHARLIMIT: None; REF-ID: n/a; NOTE: label for presenting the player the number of players at risk of injury]" />
				</widget>
			</container>

		</container>

		<widget class="next_week_training_schedule_unit_widget" id="untw" file="widgets/next week training schedule unit widget simplified view" hidden="true" />

	</container>

</panel>